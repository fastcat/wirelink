{
	"version": "2.0.0",
	"echoCommand": true,
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-v",
				"./..."
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$go"
		},
		{
			"label": "test",
			"type": "shell",
			"command": "go",
			"args": [
				"test",
				"./..."
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}
