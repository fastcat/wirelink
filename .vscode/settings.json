{
	"cSpell.allowCompoundWords": true,
	"cSpell.words": [
		"Cidr",
		"Decodable",
		"ENOKEY",
		"Equalf",
		"Falsef",
		"GOBIN",
		"GOPATH",
		"Iface",
		"Ifaces",
		"NICs",
		"Newf",
		"SGFs",
		"Typef",
		"Unmarshaller",
		"Untrusted",
		"Wrapf",
		"aips",
		"codecov",
		"deconfigure",
		"deconfigured",
		"deconfiguring",
		"dedupe",
		"deserialization",
		"deserialize",
		"deserialized",
		"enqueues",
		"gocyclo",
		"goimports",
		"golint",
		"gopls",
		"laddr",
		"nolint",
		"pcfg",
		"pflag",
		"pflags",
		"stretchr",
		"stringifying",
		"systemctl",
		"systemd",
		"testutils",
		"uint",
		"unencrypted",
		"unmarshalling",
		"unregister",
		"unregisters",
		"uuid",
		"uvarint",
		"vcfg",
		"veth",
		"vishvananda",
		"vnet",
		"wgctrl",
		"wgtypes",
		"wirevlink",
		"xyzzy"
	],
	"go.alternateTools": {
		"dlv": "${workspaceFolder}/.vscode/dlv-sudo.sh"
	},
	"go.generateTestsFlags": [
		// NOTE: as of 2020-11-29, this requires gotests@master (no released version yet)
		"-template=testify"
	],
	"go.testFlags": [
		"-short"
	],
	"go.lintTool": "golangci-lint",
	"go.buildOnSave": "workspace",
	"go.lintOnSave": "workspace",
	"go.coverOnSave": true,
	"go.vetOnSave": "workspace",
	"go.testTimeout": "10s",
	"go.testOnSave": true,
	"go.useLanguageServer": true,
	"[go]": {
		"editor.insertSpaces": false,
		"editor.formatOnSave": true,
		// work around https://github.com/golang/vscode-go/issues/721
		"editor.formatOnSaveMode": "file",
		"editor.codeActionsOnSave": {
			"source.organizeImports": true
		}
	},
	"go.formatTool": "gofumpt",
	"go.gotoSymbol.includeImports": true,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"go.delveConfig": {
		"dlvLoadConfig": {
			// "followPointers": true,
			// "maxVariableRecurse": 1,
			"maxStringLen": 256,
			// "maxArrayValues": 64,
			// "maxStructFields": -1
		},
		// "apiVersion": 2,
		// "showGlobalVariables": false
	}
}
